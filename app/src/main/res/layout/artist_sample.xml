<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/grey_light">

    <ImageView
        android:id="@+id/artist_recycler_view_image_five"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="-65dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/artist_recycler_view_image_four"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/artist_recycler_view_image_four"
        app:layout_constraintTop_toTopOf="@+id/artist_recycler_view_image_four"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/artist_recycler_view_image_four"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:scaleType="fitXY"
        android:layout_marginStart="-65dp"
        app:layout_constraintBottom_toBottomOf="@+id/artist_recycler_view_image_three"
        app:layout_constraintEnd_toStartOf="@+id/artist_recycler_view_image_five"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/artist_recycler_view_image_three"
        app:layout_constraintTop_toTopOf="@+id/artist_recycler_view_image_three"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/artist_recycler_view_image_three"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:scaleType="fitXY"
        android:layout_marginStart="-65dp"
        app:layout_constraintBottom_toBottomOf="@+id/artist_recycler_view_image_two"
        app:layout_constraintEnd_toStartOf="@+id/artist_recycler_view_image_four"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/artist_recycler_view_image_two"
        app:layout_constraintTop_toTopOf="@+id/artist_recycler_view_image_two"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/artist_recycler_view_image_two"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:scaleType="fitXY"
        android:layout_marginStart="-65dp"
        app:layout_constraintBottom_toBottomOf="@+id/artist_recycler_view_image_one"
        app:layout_constraintEnd_toStartOf="@+id/artist_recycler_view_image_three"
        app:layout_constraintStart_toEndOf="@+id/artist_recycler_view_image_one"
        app:layout_constraintTop_toTopOf="@+id/artist_recycler_view_image_one"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/artist_recycler_view_image_one"
        android:layout_width="130dp"
        android:scaleType="fitXY"
        android:layout_height="130dp"
        app:layout_constraintEnd_toStartOf="@+id/artist_recycler_view_image_two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/artist_recycler_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/artist_recycler_view_image_one"
        tools:text="ARTIST NAME" />

    <TextView
        android:id="@+id/artist_recycler_view_Track_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tracks: "
        app:layout_constraintStart_toStartOf="@id/artist_recycler_view_name"
        app:layout_constraintTop_toBottomOf="@id/artist_recycler_view_name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/artist_recycler_view_track_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/artist_recycler_view_Track_text"
        app:layout_constraintStart_toEndOf="@+id/artist_recycler_view_Track_text"
        app:layout_constraintTop_toTopOf="@+id/artist_recycler_view_Track_text"
        tools:text="ARTIST NAME" />

</androidx.constraintlayout.widget.ConstraintLayout>