<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_light">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/cover_song_list_recycler_view_sample"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/round_image_view"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/title_song_list_recycler_view_sample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/artist_song_list_recycler_view_sample"
        app:layout_constraintStart_toEndOf="@id/cover_song_list_recycler_view_sample"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Music Title" />

    <TextView
        android:id="@+id/artist_song_list_recycler_view_sample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/grey_light"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/cover_song_list_recycler_view_sample"
        app:layout_constraintTop_toBottomOf="@+id/title_song_list_recycler_view_sample"
        tools:text="Artist" />

    <TextView
        android:id="@+id/time_song_list_recycler_view_sample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="00:00" />

</androidx.constraintlayout.widget.ConstraintLayout>