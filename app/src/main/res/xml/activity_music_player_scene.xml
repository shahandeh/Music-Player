<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/main_page">
        <Constraint
            android:id="@+id/mini_player_background"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/music_list_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toTopOf="@id/mini_player_background"
            motion:layout_constraintEnd_toEndOf="@id/mini_player_background"
            motion:layout_constraintStart_toStartOf="@id/mini_player_background"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/max_player_page"
        motion:deriveConstraintsFrom="@+id/main_page">
        <Constraint
            android:id="@+id/mini_player_background"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            motion:layout_constraintBottom_toTopOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/music_list_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toTopOf="@id/mini_player_background"
            motion:layout_constraintEnd_toEndOf="@id/mini_player_background"
            motion:layout_constraintStart_toStartOf="@id/mini_player_background" />
        <Constraint
            android:layout_height="24dp"
            motion:layout_constraintEnd_toStartOf="@id/max_player_previous"
            motion:layout_constraintStart_toStartOf="@id/max_player_background"
            motion:layout_constraintTop_toTopOf="@+id/max_player_previous"
            motion:layout_constraintBottom_toBottomOf="@+id/max_player_previous"
            android:layout_width="24dp"
            android:layout_marginStart="16dp"
            android:id="@+id/max_player_repeat" />
        <Constraint
            android:layout_marginEnd="16dp"
            android:layout_height="24dp"
            motion:layout_constraintStart_toEndOf="@id/max_player_next"
            motion:layout_constraintTop_toTopOf="@+id/max_player_next"
            motion:layout_constraintBottom_toBottomOf="@+id/max_player_next"
            motion:layout_constraintEnd_toEndOf="@id/max_player_background"
            android:layout_width="24dp"
            android:id="@+id/max_player_shuffle" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="@id/max_player_background"
            android:layout_marginTop="16dp"
            motion:layout_constraintEnd_toEndOf="@id/max_player_background"
            android:layout_width="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/max_player_artist"
            android:id="@+id/max_player_title" />
    </ConstraintSet>

    <Transition
        motion:constraintSetEnd="@+id/max_player_page"
        motion:constraintSetStart="@+id/main_page">
        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@+id/mini_player_background"
            motion:touchRegionId="@id/mini_player_background" />
    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/main_page"
        motion:constraintSetStart="@+id/max_player_page">
        <OnSwipe
            motion:dragDirection="dragDown"
            motion:touchAnchorId="@+id/max_player_background"
            motion:touchRegionId="@id/max_player_background" />
    </Transition>

</MotionScene>